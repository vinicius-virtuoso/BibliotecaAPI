  "components": {
    "schemas": {
      "ErrorResponseFields": {
        "type": "object",
        "properties": {
          "message": {
            "type": "object",
            "properties": {
              "field": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        }
      },
      "RegisterPayload": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "default": "user01"
          },
          "email": {
            "type": "string",
            "default": "user01@example.com"
          },
          "password": {
            "type": "string",
            "default": "1234"
          },
          "is_staff": {
            "type": "boolean",
            "default": false
          }
        },
        "required": ["username", "email", "password"]
      },
      "LoginPayload": {
        "type": "object",
        "properties": {
          "username_or_email": { "type": "string" },
          "password": { "type": "string" }
        },
        "required": ["username_or_email", "password"]
      },
      "LoginResponse": {
        "type": "object",
        "properties": {
          "accessToken": { "type": "string" }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "username": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "is_staff": {
            "type": "boolean"
          },
          "is_blocked_loans": {
            "type": "boolean",
            "default": false
          },
          "date_unlock": {
            "type": "string",
            "default": null
          }
        }
      },
      "UpdateUserPayload": {
        "type": "object",
        "properties": {
          "username": { "type": "string" },
          "email": { "type": "string" },
          "password": { "type": "string" }
        }
      },
      "Book": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "synopsis": { "type": "string" },
          "author": { "type": "string" },
          "pages": { "type": "integer", "default": 1 },
          "language": { "type": "string" },

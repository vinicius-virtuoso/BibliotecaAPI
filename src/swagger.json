        "summary": "Atualização do Livro",
        "description": "Apenas funcionários podem acessa esta rota, e apenas detalhes do livro e não das relações podem ser atualizadas",
        "tags": ["Books"],
        "operationId": "updateBook",
        "parameters": [
          {
            "name": "book_id",
            "in": "path",
            "description": "ID do livro",
            "required": true
          }
        ],
        "security": { "bearerAuth": [] },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "titles": { "type": "string" },
                  "synopsis": { "type": "string" },
                  "author": { "type": "string" },
                  "pages": { "type": "integer" },
                  "language": { "enum": ["en-US", "pt-BR", "pt-PT"] },
                  "date_release": { "type": "string", "default": "yyyy-mm-dd" },
                  "availability": { "type": "boolean", "default": true }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Livro atualizado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "titles": { "type": "string" },
                    "synopsis": { "type": "string" },
                    "author": { "type": "string" },
                    "pages": { "type": "integer" },
                    "language": { "type": "string", "default": "en-US" },
                    "date_release": {
